---
import { Image } from '@astrojs/image/components';
import HeroCallout from './HeroCallout.astro';
const { title, image } = Astro.props;
---

<section>
	<div class="inner-wrapper">
		<h1>{title}</h1>
		<HeroCallout />
	</div>
	<div class="overlay"></div>
	<Image class="background" src={image} alt="" />
</section>

<style lang="scss">
	section {
		position: relative;
		padding: var(--s-4-5) 0;

		.inner-wrapper {
			display: flex;
			align-items: center;
			gap: var(--s-4-5);
		}
	}

	h1 {
		z-index: 20;
		color: var(--c-white);
		text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
		padding: var(--s-4-5) 0;
	}

	.overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 50%;
		background: linear-gradient(90deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0) 100%);
		height: 100%;
		z-index: 10;
	}

	.background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
</style>
