---
import Icon from 'astro-icon';
import HeaderLogo from './HeaderLogo.astro';
---

<div class="modal micromodal-slide" id="mobile-nav" aria-hidden="true">
	<div class="modal__overlay" tabindex="-1" data-micromodal-close>
		<div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-1-title">
			<header>
				<HeaderLogo />

				<button class="close-button" aria-label="Close modal" data-micromodal-close>
					<Icon name="ic:round-close" />
				</button>
			</header>

			<main class="modal__content" id="modal-1-content">
				<nav>
					<ul role="menu">
						<li role="none"><a href="/" role="menuitem">Home</a></li>
						<li role="none">
							<a role="menuitem" href="/services/website-design">Website design</a>
						</li>
						<li role="none">
							<a role="menuitem" href="/services/website-development">Website development</a>
						</li>
						<li role="none"><a role="menuitem" href="/projects">Projects</a></li>
						<li role="none"><a role="menuitem" href="/contact">Contact</a></li>
					</ul>
				</nav>
			</main>
		</div>
	</div>
</div>

<style lang="scss">
	li {
		list-style: none;
	}

	a[role='menuitem'] {
		display: flex;
		align-items: center;
		gap: var(--s-0);
		font-size: var(--fs-nav);
		font-weight: var(--fw-semi-bold);
		transition: color var(--transition);
		padding: var(--s-1) var(--s-2);
		background: none;
		border: none;
		margin: auto;

		@media (min-width: 768px) {
			padding: var(--s-2);
		}

		&:hover,
		&.active {
			color: var(--c-accent);
		}
	}

	header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
	}

	.close-button {
		display: grid;
		align-items: center;
		background: none;
		border: none;
		cursor: pointer;
		position: relative;
		padding: var(--s-1-2);

		svg {
			min-width: var(--s-4);
			min-height: var(--s-4);
			pointer-events: none;
		}
	}

	.modal {
		z-index: 500;
	}

	.modal__overlay {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(0, 0, 0, 0.6);
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.modal__container {
		scrollbar-gutter: stable;
		background-color: #fff;
		padding: var(--s-2-4);
		width: 100%;
		height: 100%;
		overflow-y: auto;
		box-sizing: border-box;

		@media (min-width: 768px) {
			padding: var(--s-2-4);
		}
	}

	.modal__content {
		margin-top: 2rem;
		margin-bottom: 2rem;
		line-height: 1.5;
		color: rgba(0, 0, 0, 0.8);
	}

	.micromodal-slide {
		display: none;
	}

	.micromodal-slide.is-open {
		display: block;
	}

	.micromodal-slide .modal__container,
	.micromodal-slide .modal__overlay {
		will-change: transform;
	}
</style>
