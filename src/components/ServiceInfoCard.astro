---
import { Picture } from '@astrojs/image/components';

interface Props {
	image: ImageMetadata;
	title: string;
	children: any;
	imagePosition: 'left' | 'right';
}

const { image, title, imagePosition } = Astro.props;
---

<article class="card">
	<Picture src={image} alt="" widths={[200, 400, 800, 1100]} aspectRatio="16:9" />
	<div class="text">
		<h3>{title}</h3>
		<slot />
	</div>
</article>

<style lang="scss">
	article {
		overflow: hidden;
	}

	.text {
		padding: var(--scale-16-48);
		display: grid;
		gap: var(--scale-16-32);
	}
</style>
