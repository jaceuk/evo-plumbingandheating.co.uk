---
import { Image } from '@astrojs/image/components';

interface Props {
	image: ImageMetadata;
	title: string;
	children: any;
	imagePosition: 'left' | 'right';
}

const { image, title, imagePosition } = Astro.props;
---

<article class={`image-${imagePosition}`}>
	<div class="text">
		<h3>{title}</h3>
		<slot />
	</div>
	<div class="image"><Image class="background" src={image} alt="" /></div>
</article>

<style lang="scss">
	article {
		overflow: hidden;
		border-radius: var(--border-radius-med);
		background: var(--c-white);
		min-width: fit-content;
		display: flex;
		flex-direction: column;
		gap: var(--scale-16-32);
		align-items: stretch;

		@media (min-width: 768px) {
			flex-direction: row;
		}
	}

	.text {
		display: grid;
		gap: var(--scale-16-32);
		width: 100%;
		order: 2;

		@media (min-width: 768px) {
			padding: var(--scale-16-48);
		}
	}

	.image {
		order: 1;
		width: 100%;
		position: relative;
		border-radius: var(--border-radius-med);
		overflow: hidden;
		height: 150px;

		@media (min-width: 768px) {
			flex-direction: row;
			min-width: 45%;
			height: auto;
			flex: 1;
		}
	}

	.background {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.image-left {
		.image {
			@media (min-width: 768px) {
				order: 1;
			}
		}

		.text {
			@media (min-width: 768px) {
				order: 2;
			}
		}
	}

	.image-right {
		.image {
			@media (min-width: 768px) {
				order: 2;
			}
		}

		.text {
			@media (min-width: 768px) {
				order: 1;
			}
		}
	}
</style>
