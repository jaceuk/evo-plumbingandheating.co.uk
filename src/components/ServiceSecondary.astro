---
import Section from './Section.astro';

import Plumbing from './content/plumbing/Secondary.astro';
import PlumbingLocalTemplate1 from './content/plumbing/localTemplates/1/Secondary.astro';
import PlumbingLocalTemplate2 from './content/plumbing/localTemplates/2/Secondary.astro';

import BlockedSinksToilets from './content/blockedSinksToilets/Secondary.astro';
import BlockedSinksToiletsLocalTemplate1 from './content/blockedSinksToilets/localTemplates/1/Secondary.astro';
import BlockedSinksToiletsLocalTemplate2 from './content/blockedSinksToilets/localTemplates/2/Secondary.astro';

import BoilerServicing from './content/boilerServicing/Secondary.astro';
import BoilerServicingLocalTemplate1 from './content/boilerServicing/localTemplates/1/Secondary.astro';
import BoilerServicingLocalTemplate2 from './content/boilerServicing/localTemplates/2/Secondary.astro';

import CentralHeating from './content/centralHeating/Secondary.astro';
import CentralHeatingLocalTemplate1 from './content/centralHeating/localTemplates/1/Secondary.astro';
import CentralHeatingLocalTemplate2 from './content/centralHeating/localTemplates/2/Secondary.astro';

import PowerFlushing from './content/powerFlushing/Secondary.astro';
import PowerFlushingLocalTemplate1 from './content/powerFlushing/localTemplates/1/Secondary.astro';
import PowerFlushingLocalTemplate2 from './content/powerFlushing/localTemplates/2/Secondary.astro';
import PowerFlushingLocalTemplate3 from './content/powerFlushing/localTemplates/3/Secondary.astro';
import PowerFlushingLocalTemplate4 from './content/powerFlushing/localTemplates/4/Secondary.astro';
import PowerFlushingLocalTemplate5 from './content/powerFlushing/localTemplates/5/Secondary.astro';
import PowerFlushingLocalTemplate6 from './content/powerFlushing/localTemplates/6/Secondary.astro';
import PowerFlushingLocalTemplate7 from './content/powerFlushing/localTemplates/7/Secondary.astro';
import PowerFlushingLocalTemplate8 from './content/powerFlushing/localTemplates/8/Secondary.astro';
import PowerFlushingLocalTemplate9 from './content/powerFlushing/localTemplates/9/Secondary.astro';

import GutterCleaning from './content/gutterCleaning/Secondary.astro';
import GutterCleaningLocalTemplate1 from './content/gutterCleaning/localTemplates/1/Secondary.astro';
import GutterCleaningLocalTemplate2 from './content/gutterCleaning/localTemplates/2/Secondary.astro';

import PatioCleaning from './content/patioCleaning/Secondary.astro';
import PatioCleaningLocalTemplate1 from './content/patioCleaning/localTemplates/1/Secondary.astro';
import PatioCleaningLocalTemplate2 from './content/patioCleaning/localTemplates/2/Secondary.astro';

import RoofCleaning from './content/roofCleaning/Secondary.astro';
import RoofCleaningLocalTemplate1 from './content/roofCleaning/localTemplates/1/Secondary.astro';
import RoofCleaningLocalTemplate2 from './content/roofCleaning/localTemplates/2/Secondary.astro';

interface Props {
	locationSlug?: string;
	serviceSlug: string;
	localTemplateNumber: number;
	location: string;
	locationTel?: string;
}

const { locationSlug = '', serviceSlug, localTemplateNumber, location, locationTel } = Astro.props;

let Content: any = '<div></div>';

if (serviceSlug === 'plumbing') {
	if (!localTemplateNumber) Content = Plumbing;
	if (localTemplateNumber === 1) Content = PlumbingLocalTemplate1;
	if (localTemplateNumber === 2) Content = PlumbingLocalTemplate2;
}
if (serviceSlug === 'blocked-sinks-toilets') {
	if (!localTemplateNumber) Content = BlockedSinksToilets;
	if (localTemplateNumber === 1) Content = BlockedSinksToiletsLocalTemplate1;
	if (localTemplateNumber === 2) Content = BlockedSinksToiletsLocalTemplate2;
}
if (serviceSlug === 'central-heating') {
	if (!localTemplateNumber) Content = CentralHeating;
	if (localTemplateNumber === 1) Content = CentralHeatingLocalTemplate1;
	if (localTemplateNumber === 2) Content = CentralHeatingLocalTemplate2;
}
if (serviceSlug === 'boiler-servicing-repairs') {
	if (!localTemplateNumber) Content = BoilerServicing;
	if (localTemplateNumber === 1) Content = BoilerServicingLocalTemplate1;
	if (localTemplateNumber === 2) Content = BoilerServicingLocalTemplate2;
}
if (serviceSlug === 'power-flushing') {
	if (!localTemplateNumber) Content = PowerFlushing;
	if (localTemplateNumber === 1) Content = PowerFlushingLocalTemplate1;
	if (localTemplateNumber === 2) Content = PowerFlushingLocalTemplate2;
	if (localTemplateNumber === 3) Content = PowerFlushingLocalTemplate3;
	if (localTemplateNumber === 4) Content = PowerFlushingLocalTemplate4;
	if (localTemplateNumber === 5) Content = PowerFlushingLocalTemplate5;
	if (localTemplateNumber === 6) Content = PowerFlushingLocalTemplate6;
	if (localTemplateNumber === 7) Content = PowerFlushingLocalTemplate7;
	if (localTemplateNumber === 8) Content = PowerFlushingLocalTemplate8;
	if (localTemplateNumber === 9) Content = PowerFlushingLocalTemplate9;
}
if (serviceSlug === 'gutter-cleaning') {
	if (!localTemplateNumber) Content = GutterCleaning;
	if (localTemplateNumber === 1) Content = GutterCleaningLocalTemplate1;
	if (localTemplateNumber === 2) Content = GutterCleaningLocalTemplate2;
}
if (serviceSlug === 'patio-cleaning') {
	if (!localTemplateNumber) Content = PatioCleaning;
	if (localTemplateNumber === 1) Content = PatioCleaningLocalTemplate1;
	if (localTemplateNumber === 2) Content = PatioCleaningLocalTemplate2;
}
if (serviceSlug === 'roof-cleaning') {
	if (!localTemplateNumber) Content = RoofCleaning;
	if (localTemplateNumber === 1) Content = RoofCleaningLocalTemplate1;
	if (localTemplateNumber === 2) Content = RoofCleaningLocalTemplate2;
}
---

<Section>
	<div class="grid" data-template={localTemplateNumber}>
		<Content location={location} locationSlug={locationSlug} />
	</div>
</Section>

<style lang="scss">
	main {
		padding: var(--scale-32-64) 0;
	}

	.grid {
		display: grid;
		grid-template-columns: 1fr;
		grid-template-rows: auto;
		gap: var(--scale-32-64);
	}

	.inner-wrapper {
		display: grid;
		gap: var(--scale-32-64);
	}

	.text {
		display: grid;
		gap: var(--scale-16-32);
	}

	.row {
		display: flex;
		gap: var(--scale-32-64);
		align-items: start;
		flex-direction: column;

		@media (min-width: 768px) {
			flex-direction: row;
		}

		.text {
			width: 60%;
		}

		aside {
			width: 40%;
		}
	}
</style>
