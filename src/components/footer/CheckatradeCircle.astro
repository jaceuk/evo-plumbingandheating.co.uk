---
interface Props {
	score: number;
}

const { score } = Astro.props;
---

<div class="outer-circle">
	<div class="inner-circle">
		<div class="h3 score">{score}</div>
	</div>
</div>

<style lang="scss">
	.outer-circle {
		background: var(--c-green);
		width: 70px;
		height: 70px;
		border-radius: 50%;
		padding: var(--s-4);
		box-shadow: var(--box-shadow-card);

		@media (min-width: 600px) {
			width: 80px;
			height: 80px;
			padding: var(--s-8);
		}

		@media (min-width: 800px) {
			width: 150px;
			height: 150px;
		}
	}

	.inner-circle {
		background: var(--c-green);
		border-radius: 50%;
		width: 100%;
		height: 100%;
		padding: var(--scale-8-16);
		border: var(--s-4) solid var(--c-white);
		display: flex;
		align-items: center;
		justify-content: space-around;
	}

	.score {
		color: var(--c-white);
		line-height: 1em;
		font-size: var(--fs-h4);

		@media (min-width: 800px) {
			font-size: var(--fs-h3);
		}
	}
</style>
