---
import { Image } from '@astrojs/image/components';
import HeroCallout from './HeroCallout.astro';
import Benefits from '../Benefits.astro';
const { title, image } = Astro.props;
---

<section>
	<div class="inner-wrapper">
		<h1>{title}</h1>
		<HeroCallout />
	</div>
	<div class="overlay"></div>
	<Image class="background" src={image} alt="" />
</section>

<Benefits />

<style lang="scss">
	section {
		position: relative;
		padding: var(--s-4-5) 0;
		border-bottom: var(--s-2) solid var(--c-evo-orange-medium);

		.inner-wrapper {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: var(--s-4-5);

			@media (min-width: 768px) {
				flex-direction: row;
			}
		}
	}

	h1 {
		z-index: 20;
		color: var(--c-white);
		text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
		padding: 0;

		@media (min-width: 768px) {
			padding: var(--s-4-5) 0;
		}
	}

	.overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 50%;
		background: linear-gradient(90deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0) 100%);
		height: 100%;
		z-index: 10;
	}

	.background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
</style>
