---
import { Image } from '@astrojs/image/components';
import LogoCheckatrade from '../../images/logo-checkatrade.svg';
import { ContactModal } from '../contactForm/ContactModal';
---

<section id="hero" class="card">
	<div class="info">
		<p class="h5 emergency">24 hour emergency helpline</p>
		<p class="h4"><span class="body">Freephone:</span> 0800 920 2030</p>
		<p>No call out charge - Fixed fee</p>
	</div>

	<ContactModal client:only="react" />

	<div class="info checkatrade">
		<Image src={LogoCheckatrade} alt="Checkatrade logo" />
		<p class="reviews"><strong>9.9 out of 10</strong><span class="small">890 reviews</span></p>
	</div>
</section>

<style lang="scss">
	section {
		display: flex;
		flex-direction: column;
		gap: var(--s-2-4);
		align-items: center;
		text-align: center;

		@media (min-width: 768px) {
			width: fit-content;
		}

		button {
			width: 100%;
		}
	}

	.card {
		padding: var(--s-4-5);
	}

	.info {
		display: grid;
		gap: var(--s-1);

		&.checkatrade {
			padding: 0 var(--s-4);
		}
	}

	.emergency {
		color: var(--c-orange);
	}

	.reviews {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
</style>
