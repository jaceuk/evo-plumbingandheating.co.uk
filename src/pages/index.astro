---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAllReviews } from '../../utils/reviews';
import type { Review } from '../../utils/types';
import ServicesByCounty from '../components/pages/ServicesByCounty.astro';

const reviews: Review[] = await getAllReviews();
const twelveReviews = reviews.slice(0, 12);

const title =
	'Plumbing, heating, boiler repair and maintenance | EVO Plumbing and Heating Services';
const description =
	'Plumbing, heating, boiler repair and maintenance experts in South East England.';
---

<BaseLayout title={title} description={description}>
	<ServicesByCounty county="South East England" reviews={twelveReviews} />
</BaseLayout>
